include Makefile.common

CXX = $(shell wx-config --cxx)

PTOBJS	= $(SOBJS) pterm_wx.o ptermcom.o 
pterm_wx:	$(PTOBJS)
	$(CXX) $(LDFLAGS) -o $@ $+ $(LIBS) $(THRLIBS)  `wx-config --libs`

pterm.dep: $(PTOBJS:.o=.d)

%.o : %.cpp
	$(CXX) $(CFLAGS) -c `wx-config --cxxflags` $<

%.d : %.cpp
	echo -n "$@ " > $@
	$(CXX) `wx-config --cxxflags` -MM $< >> $@

include  $(PTOBJS:.o=.d) 

